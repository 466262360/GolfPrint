<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_top"
        android:background="@drawable/shape_main_top_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_left"
        android:src="@drawable/main_1"
        app:layout_constraintStart_toStartOf="@+id/iv_top"
        app:layout_constraintTop_toTopOf="@+id/iv_top"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"
        android:layout_width="15dp"
        android:layout_height="15dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:textSize="15sp"
        android:text="@string/title_6"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_left"
        app:layout_constraintStart_toEndOf="@+id/iv_left"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/main_2"
        app:layout_constraintEnd_toEndOf="@id/iv_top"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_left"
        android:layout_width="90dp"
        android:layout_height="20dp"/>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_main_top_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_top" />
    <FrameLayout
        android:id="@+id/fl_bg"
        app:layout_constraintDimensionRatio="1:1.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_verify_success_bg"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/iv_verify"
        android:src="@drawable/verify_success"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/fl_bg"
        app:layout_constraintEnd_toEndOf="@+id/fl_bg"
        app:layout_constraintTop_toTopOf="@+id/fl_bg"
        android:layout_marginTop="55dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/tv_verify"
        android:layout_marginTop="40dp"
        android:textSize="17sp"
        android:text="@string/verify_6"
        app:layout_constraintStart_toStartOf="@+id/fl_bg"
        app:layout_constraintEnd_toEndOf="@+id/fl_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_1"
        android:text="@string/verify_10"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/fl_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_top"
        android:layout_marginTop="18dp"
        android:layout_marginStart="46dp"
        android:textColor="@color/color_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_order_id"
        app:layout_constraintStart_toEndOf="@+id/fl_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        android:layout_marginTop="18dp"
        android:layout_marginStart="66dp"
        android:textSize="15sp"
        android:textColor="@color/color_text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_time"
        app:layout_constraintStart_toEndOf="@+id/fl_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_id"
        android:textSize="15sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="66dp"
        android:textColor="@color/color_text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/gp_success"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_1,tv_order_id,tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_2"
        android:textSize="16sp"
        android:textColor="@color/color_text_3"
        android:text="@string/verify_8"
        app:layout_constraintStart_toEndOf="@+id/fl_bg"
        android:layout_marginStart="64dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_top"
        android:layout_marginTop="53dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_3"
        android:textSize="13sp"
        android:textColor="@color/color_text_6"
        android:text="@string/verify_9"
        android:lineSpacingExtra="13dp"
        app:layout_constraintStart_toEndOf="@+id/fl_bg"
        android:layout_marginStart="64dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_2"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/gp_fail"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_2,tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>